<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blueBackground">

    <TextView
        android:id="@+id/bandNameHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:textColor="@color/whiteChar"
        android:text="@string/title"/>

    <ImageView
        android:id="@+id/bandNameImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bandNameHead" />

    <TextView
        android:id="@+id/yearHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bandNameImage"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/title_size"
        android:textColor="@color/whiteChar"
        android:text="@string/year"/>

    <TextView
        android:id="@+id/yearContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yearHead"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/content_size"
        android:textColor="@color/whiteChar"
        android:text=""/>

    <TextView
        android:id="@+id/albumHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yearContent"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/title_size"
        android:textColor="@color/whiteChar"
        android:text="@string/album"/>

    <TextView
        android:id="@+id/albumContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/albumHead"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/content_size"
        android:textColor="@color/whiteChar"
        android:text=""/>

    <TextView
        android:id="@+id/favoriteCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/albumContent"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/title_size"
        android:textColor="@color/whiteChar"
        android:text="@string/favoriteString"
        />

    <CheckBox
        android:id="@+id/isCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/albumContent"
        android:layout_marginLeft="60dp" />

    <TextView
        android:id="@+id/moreInfoLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/favoriteCheck"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/title_size"
        android:textColor="@color/whiteChar"
        android:clickable="true"
        android:text="" />
    <!-- android:text="@string/moreInfoString" -->

</RelativeLayout>
